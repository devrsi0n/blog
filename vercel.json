{
  "version": 2,
  "alias": ["devrsi0n.com"],
  "env": {
    "FAUNADB_SECRET": "@faunadb-secret"
  },
  "build": {
    "env": {
      "GH_TOKEN": "@gh-token"
    }
  },
  "routes": [
    {
      "src": "^/(static|icons)/(.*)",
      "headers": { "cache-control": "public,max-age=31536000,immutable" }
    },
    {
      "src": "^/(.*).(css|js)",
      "headers": { "cache-control": "public,max-age=31536000,immutable" }
    },
    {
      "src": "^/(.*).(html|json)",
      "headers": { "cache-control": "public,max-age=0,must-revalidate" }
    },
    { "handle": "filesystem" },
    { "src": "/.*", "status": 404, "dest": "/404" }
  ]
}
